<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.LoginPage"
             Background="#000000"
             Title="LoginPage">
    <VerticalStackLayout>
        <Image
        Source="logo_twitch.png"
        HeightRequest="65"
        Aspect="AspectFit"
        HorizontalOptions="Start"
    />
        <Image
    Source="Img_Twitch.webp"
    HeightRequest="185"
    Aspect="AspectFit"
    />

        <Entry
    Keyboard="Text"
    TextColor="#f0f0ff"
    x:Name="entNomUsuario"
    Placeholder="Nombre de usuario"
    HorizontalOptions="Center"
    WidthRequest="250"
    Margin="0,25,0,25"
    />
        <Entry
    Keyboard="Numeric"
    IsPassword="True"
    TextColor="#f0f0ff"
    x:Name="entPassword"
    Placeholder="ContraseÃ±a"
    HorizontalOptions="Center"
    WidthRequest="250"
    Margin="0,25,0,25"
    />
        <Button
    Text="Iniciar"
    TextColor="#f0f0ff"
    BackgroundColor="#9146ff"
    x:Name="BtnIniciar"
    Clicked="BtnIniciar_Clicked"
    HorizontalOptions="Center"
    VerticalOptions="Center"
    Margin="0,25,0,0"
    />
    </VerticalStackLayout>
</ContentPage>